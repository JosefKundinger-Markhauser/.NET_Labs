@{
    ViewData["Title"] = "Images";  
}
@model IEnumerable<Lab5.Models.AnswerImage>


<h1>Images</h1>
<p>
    <a asp-action="Upload">Upload New</a>
</p>
@if (Model.Count() == 0)
{
    <p>There are no Images to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    <img src="@item.Url" style="max-width: 400px;" />
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.AnswerImageId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

}
